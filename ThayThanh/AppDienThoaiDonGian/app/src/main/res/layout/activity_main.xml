<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/soDienThoai" />

    <EditText
        android:id="@+id/txtSoDienThoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/noiDungTinNhan" />

    <EditText
        android:id="@+id/txtNoiDungTinNhan"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:gravity="top"
        android:text="@string/tinNhan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnQuaySo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calldial" />

        <ImageButton
            android:id="@+id/btnGoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call" />

        <ImageButton
            android:id="@+id/btnTinNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message" />
    </LinearLayout>
</LinearLayout>