<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDOM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnDOM" />

        <Button
            android:id="@+id/btnSAX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240sp"
            android:text="@string/btnSAX" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:background="@android:color/holo_blue_light" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="10sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/title_spinner"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnNgheNghiep"
                android:layout_width="300sp"
                android:layout_height="60sp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:text="@string/content"
        android:textColor="@android:color/white" />

    <ListView
        android:id="@+id/lvDanhSachNhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>